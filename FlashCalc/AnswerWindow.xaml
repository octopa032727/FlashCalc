<Window x:Class="FlashCalc.AnswerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashCalc"
        mc:Ignorable="d"
        Title="解答する" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lb_yourans" Content="予想結果" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" />
        <TextBox x:Name="tb_yourans" HorizontalAlignment="Left" Height="120" Margin="10,43,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="272" FontSize="36"/>
        <Button x:Name="btn_answer" Content="解答する" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top" Width="75" Click="btn_answer_Click"/>

    </Grid>
</Window>
